// Schema documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum status {
  CHECKED_IN
  CHECKED_OUT
}

enum role {
  BASIC
  MANAGER
  ADMIN
}

enum transaction {
  EARN
  SPEND
}

model user {
  id Int @id @default(autoincrement())
  firebase_id String @unique // Unique ID retrieved from firebase
  first_name String 
  last_name String
  birth_date DateTime
  points Int @default(0)
  role role @default(BASIC)
  post post[]
  party party[]
  attendance attendance_log[]

  friends_sent friends[] @relation("sent")
  friends_recieved friends[] @relation("recieved")
}

model post {
  id         Int      @id @default(autoincrement())
  user_id    Int
  bar_id     Int?
  party_id   Int?     

  user       user     @relation(fields: [user_id], references: [id])
  bar        bar?     @relation(fields: [bar_id], references: [id])
  party      party?   @relation(fields: [party_id], references: [id])

  content    String
  timestamp  DateTime @default(now())
}

// Stores locations as latitude and longitude coordinates
model party {
  id Int @id @default(autoincrement())
  user_id Int
  name String
  description String?
  address String
  start_time String 
  end_time String
  longitude Decimal
  latitude Decimal

  posts post[]
  user user @relation(fields: [user_id], references: [id])
}

// Stores locations as latitude and longitude coordinates
model bar {
  id Int @id @default(autoincrement())
  name String @unique
  address String
  longitude Decimal
  latitude Decimal
  events event[]
  posts post[]
  attendance attendance_log[]
}

model event {
  id Int @id @default(autoincrement())
  bar_id Int
  title String
  description String?
  event_date String
  start_time DateTime @default(now())
  end_time DateTime
  bar bar @relation(fields: [bar_id], references: [id])
}

model attendance_log {
  id Int @id @default(autoincrement())
  user_id Int
  bar_id Int
  status status
  timestamp DateTime @default(now()) 
  user user @relation(fields: [user_id], references: [id])
  bar bar @relation(fields: [bar_id], references: [id])
}

model points_log {
  id Int @id @default(autoincrement())
  user_id Int
  transaction_type transaction
  points_change Int
  source String?
  timestamp DateTime @default(now())
}

enum friend_status {
  ACCEPTED
  PENDING
}

model friends {
  id Int @id @default(autoincrement())
  requestor_id Int
  requestor user @relation("sent", fields: [requestor_id], references: [id])
  reciever_id Int
  reciever user @relation("recieved", fields: [reciever_id], references: [id])

  status friend_status @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([requestor_id, reciever_id])
}