// Schema documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  CHECKED_IN
  CHECKED_OUT
}

enum Role {
  BASIC
  MANAGER
  ADMIN
}

enum Transaction {
  EARN
  SPEND
}

model User {
  id Int @id @default(autoincrement())
  firebase_id String @unique // Unique ID retrieved from firebase
  first_name String 
  last_name String
  birth_date DateTime
  points Int @default(0)
  role Role @default(BASIC)
  post Post[]
  party Party[]
  attendance Attendance_log[]
}

model Post {
  id Int @id @default(autoincrement())
  user_id Int
  bar_id Int
  user User @relation(fields: [user_id], references: [id])
  bar Bar @relation(fields: [bar_id], references: [id])
  content String
  timestamp DateTime @default(now())
}

// Stores locations as latitude and longitude coordinates
model Party {
  id Int @id @default(autoincrement())
  user_id Int
  name String
  description String?
  start_time DateTime @default(now())
  end_time DateTime
  longitude Decimal
  latitude Decimal
  user User @relation(fields: [user_id], references: [id])
}

// Stores locations as latitude and longitude coordinates
model Bar {
  id Int @id @default(autoincrement())
  name String @unique
  address String
  longitude Decimal
  latitude Decimal
  events Event[]
  posts Post[]
  attendance Attendance_log[]
}

model Event {
  id Int @id @default(autoincrement())
  name String
  description String?
  start_time DateTime @default(now())
  end_time DateTime
  bar_id Int
  bar Bar @relation(fields: [bar_id], references: [id])
}

model Attendance_log {
  id Int @id @default(autoincrement())
  user_id Int
  bar_id Int
  status Status
  timestamp DateTime @default(now()) 
  user User @relation(fields: [user_id], references: [id])
  bar Bar @relation(fields: [bar_id], references: [id])
}

model Points_log {
  id Int @id @default(autoincrement())
  user_id Int
  transaction_type Transaction
  points_change Int
  source String?
  timestamp DateTime @default(now())
}