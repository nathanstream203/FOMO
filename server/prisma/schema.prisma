// Schema documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// Possibly redundant - could be removed if User table is updated to store a defined role name
model Role { 
  id Int @id @default(autoincrement())
  name String @unique // Must have a unique name 
  description String? // Optional description
  users User[]
}

model User {
  id Int @id @default(autoincrement())
  firebase_id String @unique // Unique ID retrieved from firebase
  first_name String 
  last_name String
  birth_date DateTime
  role_id Int
  role Role @relation(fields: [role_id], references: [id])
  post Post[]
  party Party[]
}

model Post {
  id Int @id @default(autoincrement())
  user_id Int
  bar_id Int
  user User @relation(fields: [user_id], references: [id])
  bar Bar @relation(fields: [bar_id], references: [id])
  content String
  timestamp DateTime @default(now())
}

// Stores locations as latitude and longitude coordinates
model Party {
  id Int @id @default(autoincrement())
  user_id Int
  name String
  description String?
  start_time DateTime @default(now())
  end_time DateTime
  longitude Decimal
  latitude Decimal
  user User @relation(fields: [user_id], references: [id])
}

// Stores locations as latitude and longitude coordinates
model Bar {
  id Int @id @default(autoincrement())
  name String @unique
  address String
  longitude Decimal
  latitude Decimal
  events Event[]
  posts Post[]
}

model Event {
  id Int @id @default(autoincrement())
  name String
  description String?
  start_time DateTime @default(now())
  end_time DateTime
  bar_id Int
  bar Bar @relation(fields: [bar_id], references: [id])
}
