// Schema documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  CHECKED_IN
  CHECKED_OUT
}

enum Role {
  BASIC
  MANAGER
  ADMIN
}

enum Transaction {
  EARN
  SPEND
}

model User {
  id Int @id @default(autoincrement())
  firebase_id String @unique // Unique ID retrieved from firebase
  first_name String 
  last_name String
  birth_date DateTime
  points Int @default(0)
  role Role @default(BASIC)
  post Post[]
  party Party[]
  attendance Attendance_log[]

  friends_sent Friends[] @relation("sent")
  friends_recieved Friends[] @relation("recieved")
}

model Post {
  id         Int      @id @default(autoincrement())
  user_id    Int
  bar_id     Int?
  party_id   Int?     

  user       User     @relation(fields: [user_id], references: [id])
  bar        Bar?     @relation(fields: [bar_id], references: [id])
  party      Party?   @relation(fields: [party_id], references: [id])

  content    String
  timestamp  DateTime @default(now())
}

// Stores locations as latitude and longitude coordinates
model Party {
  id Int @id @default(autoincrement())
  user_id Int
  name String
  description String?
  address String
  start_time String 
  end_time String
  longitude Decimal
  latitude Decimal

  posts Post[]
  user User @relation(fields: [user_id], references: [id])
}

// Stores locations as latitude and longitude coordinates
model Bar {
  id Int @id @default(autoincrement())
  name String @unique
  address String
  longitude Decimal
  latitude Decimal
  events Event[]
  posts Post[]
  attendance Attendance_log[]
}

model Event {
  id Int @id @default(autoincrement())
  bar_id Int
  title String
  description String?
  event_date String
  start_time DateTime @default(now())
  end_time DateTime
  bar Bar @relation(fields: [bar_id], references: [id])
}

model Attendance_log {
  id Int @id @default(autoincrement())
  user_id Int
  bar_id Int
  status Status
  timestamp DateTime @default(now()) 
  user User @relation(fields: [user_id], references: [id])
  bar Bar @relation(fields: [bar_id], references: [id])
}

model Points_log {
  id Int @id @default(autoincrement())
  user_id Int
  transaction_type Transaction
  points_change Int
  source String?
  timestamp DateTime @default(now())
}

enum Friend_Status {
  ACCEPTED
  PENDING
}

model Friends {
  id Int @id @default(autoincrement())
  requestor_id Int
  requestor User @relation("sent", fields: [requestor_id], references: [id])
  reciever_id Int
  reciever User @relation("recieved", fields: [reciever_id], references: [id])

  status Friend_Status @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([requestor_id, reciever_id])
}